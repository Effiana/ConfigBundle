{% form_theme form 'CraueConfigBundle::form.html.twig' %}

<form method="post" class="craue_config_settings_modify" {{ form_enctype(form) }}>
	{{ form_errors(form) }}

	{% for setting in form.settings %}
		{{ form_row(setting.name) }}
		{{ form_row(setting.value, {'label': setting.name.get('value')}) }}
	{% endfor %}

	{{ form_rest(form) }}

	<button type="submit">{{ 'modify_settings' | trans({}, 'CraueConfigBundle') }}</button>
</form>
